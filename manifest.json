{
    "manifest_version": 2,
    "name": "Discord Base64 Decode",
    "version": "1.1",
    "description": "Adds Base64 decode button to message actions.",
    "icons": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "browser_action": {
        "default_icon": "icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://discordapp.com/channels/*"
            ],
            "js": ["content.js"]
        }
    ]
}